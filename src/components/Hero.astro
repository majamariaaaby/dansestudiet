---
import "../styles/global.css";
import Button from "./Button.astro";
const { btext } = Astro.props;
---

<section class="con">
  <h1 class="overskrift">Danse<br />studiet</h1>

  <Button title={btext} />
</section>

<style>
  section {
    height: 100vh;
    width: 100%;
    max-width: 100%;
    background-image: url("../assets/hero.webp");
    background-size: cover;
    background-position: center;
    align-items: center;
  }

  .overskrift {
    text-align: center;
    margin-top: 40px;
    position: absolute;
    line-height: 80%;
    top: 10%;
    /* margin: auto; */
  }

  h1 {
    font-size: 25vw;
  }

  .con {
    display: flex;
    flex-direction: column;
    justify-content: end;
  }

  @media (max-width: 600px) {
    .overskrift {
      text-align: center;
    }
  }
</style>
