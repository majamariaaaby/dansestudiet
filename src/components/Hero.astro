---
import "../styles/global.css";
---

<section>
  <h1 class="overskrift">Danse<br />studiet</h1>
</section>

<style>
  section {
    height: 100vh;
    width: 100%;
    background-image: url("../assets/hero.webp");
    background-size: cover;
    align-items: center;
    justify-content: center;
    position: relative;
    position: center;
  }

  .overskrift {
    text-align: center;
    margin-top: 40px;
    position: absolute;
    line-height: 80%;
    top: 15%;
    /* margin: auto; */
  }
  @media (max-width: 600px) {
    section {
      height: 100vh;
      background-image: url("../assets/hero.webp");
      background-size: cover;
      background-position: center;
    }

    .overskrift {
      text-align: center;
    }
  }
</style>
