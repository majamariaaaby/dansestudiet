---
import "../styles/global.css";
import Button from "./Button.astro";
const { image, alt, headline, class_variant, text1, text2, variant, videoSrc, hide_video, hide_image } = Astro.props;
const isVideo = variant === 'video';
---

<section class={class_variant}>
    <div class="container">
        <div class="text_container">
        <h2>{headline}</h2>
        <p>{text1}</p>
        <p>{text2}</p>
    </div>
        <div class="knap_container">
        <Button title="tilmeld hold" />
        </div>
    </div>
    <div class="container_video">
        <div class={hide_video}>
            <video width="100%" controls>
                <source src={videoSrc} type="video/mp4">
                <source src={videoSrc} type="video/ogg">
                Your browser does not support the video tag.
            </video>
        </div>
            <div class={hide_image}>
           <img src={image} alt={alt}>
        </div>
    </div>
</section>

<style>
    .intro_container, .undervisere_container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 20px;
        margin-block: 50px;
        max-width: 1200px;
    }

    .undervisere_container {
        flex-direction: row-reverse;
        
    }

    .knap_container {
        display: flex;
        justify-content:flex-end;
    }

    .container {
        display: flex;
        flex-direction: column;
        max-width: 40%;
        justify-content: space-between;
        gap: 10px;
    }
  
    img {
        width: 100%;
        max-width: 700px;
        
    }

    .not_visible {
        display: none;
    }

    @media (max-width: 800px) {
        .intro_container, .undervisere_container {
            flex-direction: column-reverse;
        }

        .text_container {

        max-width: 100%;
    }

    }


    </style>





