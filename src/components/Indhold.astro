---
import "../styles/global.css";
import Button from "./Button.astro";
const { image, alt, headline, class_variant, text1, text2, variant, videoSrc } = Astro.props;
const isVideo = variant === 'video';
---

<section class={class_variant}>
    <div class="text_container">
        <h2>{headline}</h2>
        <p>{text1}</p>
        <p>{text2}</p>
        <div class="knap_container">
        <Button title="tilmeld hold" />
        </div>
    </div>
    <div class="container_video">
        {isVideo ? (
            <video controls>
                <source src={videoSrc} type="video/mp4">
                <source src={videoSrc} type="video/ogg">
                Your browser does not support the video tag.
            </video>
        ) : (
            <img src={image} alt={alt}>
        )}
    </div>
</section>

<style>
    .intro_container, .undervisere_container {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 20px;
        margin-block: 50px;
        max-width: 1200px;
    }

    .undervisere_container {
        flex-direction: row-reverse;
        background-color: coral;
        
    }

    .knap_container {
        display: flex;
        justify-content:flex-end;
    }

    .text_container {
        background-color: var(--blue-100);
        max-width: 40%;
    }
    .text_container :last-child {
        display: flex;
        justify-content:last baseline;
    }

    img {
        max-width: 700px;
    }


    </style>





